{
  "name": "persian-calendar-app",
  "version": "1.0.0",
  "description": "Modern Persian Calendar Desktop App with Jalali, Hijri and Gregorian calendars",
  "main": "electron-dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.ayarplus.calendar",
    "productName": "Persian Calendar",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "vue": "^3.5.0",
    "vue-persian-calendar-datepicker": "^1.2.0",
    "moment-jalaali": "^0.10.1",
    "moment-hijri": "^2.30.0",
    "pinia": "^2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.4.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0"
  }
}
